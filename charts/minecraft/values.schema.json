{
    "$schema": "http://json-schema.org/draft-07/schema",
    "required": ["minecraftServer", "initContainers", "sidecarContainers"],
    "properties": {
        "minecraftServer": {
            "type": "object",
            "properties": {
                "eula": {
                    "anyOf": [
                        {
                            "type": "string",
                            "enum": ["true", "TRUE", "false", "FALSE"]
                        },
                        {
                            "type": "boolean"
                        }
                    ]
                },
                "version": {"type": "string",
                    "default": "LATEST",
                    "title": "Minecraft version for all server types",
                    "description": "Such as LATEST, SNAPSHOT, or a specific version. Refer to https://docker-minecraft-server.readthedocs.io/en/latest/versions/minecraft/"
                },
                "type": {"type": "string",
                    "default": "VANILLA",
                    "title": "Server type",
                    "description": "Refer to https://docker-minecraft-server.readthedocs.io/en/latest/types-and-platforms/"
                },
                "difficulty": {
                    "type": "string"
                },
                "maxPlayers": {
                    "oneOf": [
                        {"type": "integer"},
                        {"enum": ["default"]}
                    ]
                },
                "maxWorldSize": {
                    "oneOf": [
                        {"type": "integer"},
                        {"enum": ["default"]}
                    ]
                },
                "modrinth": {
                    "type": "object",
                    "required": ["projects"],
                    "properties": {
                        "projects": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "uniqueItems": true
                        },
                        "downloadDependencies": {
                            "enum": ["none", "required", "optional"]
                        },
                        "allowedVersionType": {
                            "enum": ["release", "beta", "alpha", "default"]
                        }
                    }
                },
                "spigetResources": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                },
                "modUrls": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true
                },
                "autoCurseForge": {
                    "type": "object",
                    "properties": {
                        "apiKey": {
                            "type": "object",
                            "properties": {
                                "key": {
                                    "type": "string"
                                },
                                "existingSecret": {
                                    "type": "string"
                                },
                                "secretKey": {
                                    "type": "string"
                                }
                            }
                        },
                        "pageUrl": {
                            "type": "string"
                        },
                        "slug": {
                            "type": "string"
                        },
                        "fileId": {
                            "type": "string"
                        },
                        "filenameMatcher": {
                            "type": "string"
                        },
                        "excludeMods": {
                            "type": "array",
                            "items": {
                                "type": ["integer", "string"]
                            },
                            "uniqueItems": true
                        },
                        "includeMods": {
                            "type": "array",
                            "items": {
                                "type": ["integer", "string"]
                            },
                            "uniqueItems": true
                        },
                        "excludeIncludeFile": {
                            "type": ["string", "null"]
                        },
                        "forceSynchronize": {
                            "type": "boolean"
                        },
                        "setLevelFrom": {
                            "enum": ["", "WORLD_FILE", "OVERRIDES"]
                        },
                        "parallelDownloads": {
                            "type": "integer",
                            "minimum": 1
                        },
                        "overridesSkipExisting": {
                            "type": "boolean"
                        }
                    }
                },
                "pluginUrls": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "maxBuildHeight": {
                    "oneOf": [
                        {"type": "integer"},
                        {"enum": ["default"]}
                    ]
                },
                "maxTickTime": {
                    "oneOf": [
                        {"type": "integer"},
                        {"enum": ["default"]}
                    ]
                },
                "spawnProtection": {
                    "oneOf": [
                        {"type": "integer"},
                        {"enum": ["default"]}
                    ]
                },
                "viewDistance": {
                    "oneOf": [
                        {"type": "integer"},
                        {"enum": ["default"]}
                    ]
                },
                "ftbLegacyJavaFixer": {
                    "anyOf": [{"type": "string", "enum": ["default"]}, {"type": "boolean"}]},
                "allowNether": {
                    "anyOf": [{"type": "string", "enum": ["default"]}, {"type": "boolean"}]},
                "announcePlayerAchievements": {
                    "anyOf": [{"type": "string", "enum": ["default"]}, {"type": "boolean"}]},
                "enableCommandBlock": {
                    "anyOf": [{"type": "string", "enum": ["default"]}, {"type": "boolean"}]},
                "forcegameMode": {
                    "anyOf": [{"type": "string", "enum": ["default"]}, {"type": "boolean"}]},
                "generateStructures": {
                    "anyOf": [{"type": "string", "enum": ["default"]}, {"type": "boolean"}]},
                "hardcore": {
                    "anyOf": [{"type": "string", "enum": ["default"]}, {"type": "boolean"}]},
                "spawnAnimals": {
                    "anyOf": [{"type": "string", "enum": ["default"]}, {"type": "boolean"}]},
                "spawnMonsters": {
                    "anyOf": [{"type": "string", "enum": ["default"]}, {"type": "boolean"}]},
                "spawnNPCs": {
                    "anyOf": [{"type": "string", "enum": ["default"]}, {"type": "boolean"}]},
                "pvp": {
                    "anyOf": [{"type": "string", "enum": ["default"]}, {"type": "boolean"}]},
                "onlineMode": {
                    "anyOf": [{"type": "string", "enum": ["default"]}, {"type": "boolean"}]},
                "enforceSecureProfile": {
                    "anyOf": [{"type": "string", "enum": ["default"]}, {"type": "boolean"}]},
                "overrideServerProperties": {
                    "anyOf": [{"type": "string", "enum": ["default"]}, {"type": "boolean"}]}
            },
            "required": [
                "eula"
            ]
        },
        "mcbackup": {
            "type": "object",
            "properties": {
                "backupMethod": {
                    "type": "string",
                    "enum": [
                        "tar",
                        "restic",
                        "rclone",
                        "rsync"
                    ]
                },
                "resticRepository": {
                    "type": "string"
                }
            }
        },
        "extraPodSpec": {
            "type": "object"
        },
        "initContainers": {
            "items": {
                "type": ["object", "string"]
            },
            "type": "array"
        },
        "sidecarContainers": {
            "items": {
                "type": ["object", "string"]
            },
            "type": "array"
        },
        "extraDeploy": {
            "items": {
                "type": ["object", "string"]
            },
            "type": "array"
        }
    }
}
